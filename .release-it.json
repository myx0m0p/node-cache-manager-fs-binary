{
  "npm": {
    "publish": false
  },
  "git": {
    "commitMessage": "chore(release): ${version}",
    "requireBranch": "master",
    "requireCommits": true
  },
  "github": {
    "release": true,
    "draft": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular"
    }
  }
}
